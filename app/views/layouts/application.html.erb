          <a href="mailto:yvonne@elasticevents.com">yvonne@elasticevents.com</a><br>
          <abbr title="Telephone">T:</abbr>+1 905-281-0555 x 111<br>
          2309 Kenbarb Road<br>
          Mississauga, ON <br>
          L5B 2E9<br>
        </address>
      </div>
    </div>
  </div>

  <%= javascript_include_tag "application" %>
</body>
</html>
