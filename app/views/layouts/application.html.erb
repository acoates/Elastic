</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner"  id="nav">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
				<%= link_to raw("<i class='icon-home'></i>"), root_path, :class => "brand" %>
        <div class="nav-collapse">
          <ul class="nav">
            <li class='<%= 'active' if current_page?(who_path) %>'><%= link_to "Who We Are", who_path %></li>
            <li class='<%= 'active' if current_page?(what_path) %>'><%= link_to "What We Do", what_path %></li>
            <li class='<%= 'active' if current_page?(how_path) %>'><%= link_to "How We Do It", how_path %></li>
            <li class='<%= 'active' if current_page?(team_path) %>'><%= link_to "Elastic Team", team_path %></li>
            <li class='<%= 'active' if current_page?(testimonials_path) %>'><%= link_to "Testimonials", testimonials_path %></li>
            <li class='<%= 'active' if current_page?(messages_path) %>'><%= link_to raw("<strong>Contact Us</strong>"), messages_path %></li>

          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="span9"><%= yield %></div>
